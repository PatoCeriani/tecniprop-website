<style>
    /* Custom bullets amarillos */
    .custom-bullets {
        list-style: none;
        padding-left: 0;
    }

    .custom-bullets li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .custom-bullets li::before {
        content: "●";
        color: #ffe02e;
        font-size: 1.2rem;
        position: absolute;
        left: 0;
        top: 0;
        line-height: 1.5;
    }

    /* Button hover effect */
    .consultation-btn:hover {
        background-color: #0e8193;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    /* Responsive adjustments */
    @media (max-width: 1200px) {
        .grid-cols-3 {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .col-span-1 {
            width: 100% !important;
            padding: 15px !important;
        }
    }
</style>
